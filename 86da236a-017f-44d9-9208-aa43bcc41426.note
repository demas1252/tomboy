(setq <link:internal>erlang</link:internal>-root-dir "/usr/lib/<link:internal>erlang</link:internal>")
(<link:internal>add</link:internal>-to-list 'exec-path "/usr/lib/<link:internal>erlang</link:internal>/bin")
(setq <link:internal>erlang</link:internal>-<link:internal>man</link:internal>-root-dir "/usr/lib/<link:internal>erlang</link:internal>/<link:internal>man</link:internal>")


