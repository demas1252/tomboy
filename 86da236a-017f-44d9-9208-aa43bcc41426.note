<link:url>http://xtalk.msk.su/~ott/ru/writings/emacs-devenv/EmacsErlang.html</link:url>

(<link:internal>add</link:internal>-to-list 'load-path "/usr/lib/<link:internal>erlang</link:internal>/lib/tools-2.6.2/<link:internal>emacs</link:internal>/")
(require '<link:internal>erlang</link:internal>-start)

(<link:internal>add</link:internal>-to-list 'auto-mode-alist '("\\.erl?$" . <link:internal>erlang</link:internal>-mode))
