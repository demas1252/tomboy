<bold>Оптимизированный вариант</bold>

(define (m_double x)
  (+ x x))

(define (m_halve x)
  (/ x 2))

(define (mult a b)
  (<link:internal>if</link:internal> (= b 0)
      0
      (<link:internal>if</link:internal> (even? b)
          (mult (m_double a) (m_halve b))
          (+ a (* a (- b <link:internal>1</link:internal>))))))     </note-content></text>
